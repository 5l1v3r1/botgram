{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017"],
    "strict": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"]
  },
  "include": [
    "src"
  ]
}
